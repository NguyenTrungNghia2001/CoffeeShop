@model CoffeeShop.Models.LOAINGUYENLIEU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class=""><h2 style="color:black">Sửa công thức</h2></div>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDLNL)

            <div class="form-group">
                @Html.LabelFor(model => model.TenLNL, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenLNL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLNL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin:10px">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <button class="btn" style="margin:20px">
            @Html.ActionLink("Back to List", "Index")
        </button>
    </div>
</div>

<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
