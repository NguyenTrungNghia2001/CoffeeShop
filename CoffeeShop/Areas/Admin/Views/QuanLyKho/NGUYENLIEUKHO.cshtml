
@using CoffeeShop.Models
@model IEnumerable<NGUYENLIEUKHO>

@{
    ViewBag.Title = "NGUYENLIEUKHO";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<a href="@Url.Action("HienThiGioHang", "QuanLyKho")" class="nav-item nav-link" style="color:red">
    HOÁ ĐƠN XUẤT (@ViewBag.TongSL)
</a>

<h2 style="text-align:center">DANH SÁCH NGUYÊN LIỆU KHO</h2>
<div class="content-wrapper">
    <div class="container" style="max-width:100%">
        <table cellpadding="0" cellspacing="0" border="0" class="sortable">
            <tr class="tbl-header" style="color:white">
                <td style="color:white">Mã Nguyên Liệu Kho</td>
                <td style="color:white">Tên Nguyên Liệu Kho</td>
                <td style="color:white">Mã Loại Nguyên Liệu</td>
                <td style="color:white">Tổng số lượng Tồn</td>
                <td style="color:white"></td>
            </tr>
      
                @foreach (var item in Model)
                {
                    <tr class="item tbl-content">
                        <td>@item.IDNLKHO</td>
                        <td>@item.TENNLKHO</td>
                        <td>@item.IDLNL</td>
                        <td>@item.SOLUONGTON</td>
                        <td>
                            @Html.ActionLink(".", "HienThiDonHang", new { id = item.IDNLKHO }, new { @class = "fa fa-eye", @style = "font-size:24px; color:black" })
                            <a href="#" class="btnCapNhat" data-id="@item.IDNLKHO"><i style="font-size: 24px; color:black " class="fa">&#xf040;</i></a> |
                            <a href="@Url.Action("ThemSanPhamVaoHD","QuanLyKho" , new { IdNLKHO = item.IDNLKHO })" style="color: black; font-size:24px">+</a>
                        </td>
                    </tr>
                }
            
        </table>
    </div>
</div>


<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<link rel="stylesheet" href="~/css/StyleLog.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-boostrap/4.5.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />

<script src="~/js/AdminJs.js"></script>
<link rel="stylesheet" href="~/css/AdminStyle.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,500,300,700" />