@model PagedList.IPagedList<CoffeeShop.Models.HOADONNHAPXUAT>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "HOADONNHAPXUAT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">DANH SÁCH HOÁ ĐƠN NHẬP/XUẤT</h2>
<div class="content-wrapper">
    <div class="container" style="max-width:100%">
        <table cellpadding="0" cellspacing="0" border="0" class="sortable">
            <tr class="tbl-header">
                <td style="color:white">Mã hoá đơn</td>
                <td style="color:white"> Mã kho hàng</td>
                <td style="color:white">Cửa hàng nhận</td>
                <td style="color:white">Ngày xuất</td>
                <td style="color:white">Tổng số lượng</td>
                <td style="color:white">Nhập/Xuat</td>
            </tr>
            @if (Model != null && Model.Any())
            {
                var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                foreach (var item in Model)
                {
                    <tr class="item tbl-content">
                        <td>@item.IDHD</td>
                        <td>@item.IDKHO</td>
                        <td>@item.DiaChiCH</td>
                        <td>@item.NGAYXUAT.Value.ToString("dd/MM/yyyy")</td>
                        <td>@item.TONGSOLUONG</td>
                        <td>@item.NHAPXUAT</td>
                        <td>
                            @Html.ActionLink(".", "HienThiDonHang", new { id = item.IDHD }, new { @class = "fa fa-eye", @style = "font-size:24px; color:black" })
                            <a href="#" class="btnCapNhat" data-id="@item.IDHD"><i style="font-size: 24px; color:black " class="fa">&#xf040;</i></a> |
                            <a href="#" class="btnHuy" data-id="@item.IDHD" style="color: black; font-size:24px">X</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="col-6"></div>
    <div class="col-6" style="text-align:right;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>


<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<link rel="stylesheet" href="~/css/StyleLog.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-boostrap/4.5.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />

<script src="~/js/AdminJs.js"></script>
<link rel="stylesheet" href="~/css/AdminStyle.css" />
