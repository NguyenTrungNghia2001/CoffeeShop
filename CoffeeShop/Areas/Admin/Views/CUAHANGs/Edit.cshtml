@model CoffeeShop.Models.CUAHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<div class="content-wrapper">
    <div class=""><h2 style="color:black">Sửa Cửa Hàng</h2></div>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IDCH, "Mã Cửa Hàng", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDCH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IDCH, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.LabelFor(model => model.DiaChiCH, "Địa Chỉ Cửa Hàng", htmlAttributes: new { @class = "control-label col-md-2" })
    

            <div class="form-group">
                @Html.LabelFor(model => model.SLNhanVien, "Số lượng nhân viên hiện có", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SLNhanVien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SLNhanVien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DoanhThu,"Tổng Doanh Thu QUán", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DoanhThu, "Tổng Doanh Thu Quán",new { htmlAttributes = new { @class = "form-control", @disable ="disable"} })
                    @Html.ValidationMessageFor(model => model.DoanhThu, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.IDKHO, "Mã Kho", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IDKHO", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDKHO, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin:10px">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <button class="btn" style="margin:20px">
            @Html.ActionLink("Back to List", "Index")
        </button>
    </div>
</div>

<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
