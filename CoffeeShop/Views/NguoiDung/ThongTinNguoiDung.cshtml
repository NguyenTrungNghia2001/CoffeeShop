@model CoffeeShop.Models.KHACHHANG
@{
    ViewBag.Title = "ThongTinNguoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
           
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <div class="card-3d-wrapper">
                        <div class="card-front">
                            @using (Html.BeginForm("CapNhatThongTinCaNhan", "NguoiDung", FormMethod.Post, new { @class = "card-front" }))
                            {@Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.IDKH)
                            @Html.HiddenFor(model => model.MALKH)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <h2 style="color: red;">@ViewBag.ThongBao</h2>
                            <div class="center-wrap">
                                <div class="section text-center">

                                    <h4 class="mb-4 pb-3" style="color: #ffeba7;">Thông Tin Cá Nhân</h4>
                                    <div class="form-group">
                                        <p>Họ và tên:</p>
                                        @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-style" } })
                                        @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mt-2">
                                        <p>Email: </p>
                                        @Html.EditorFor(model => model.EmailKH, new { htmlAttributes = new { @class = "form-style", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.EmailKH, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group mt-2">
                                        <p>Mật khẩu: </p>
                                        
                                           
                                        @Html.EditorFor(model => model.PassKH,new { htmlAttributes = new { @class = "form-style" } })
                                        

                                        @Html.ValidationMessageFor(model => model.PassKH, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group mt-2">
                                        <p>Địa chỉ: </p>
                                        @Html.EditorFor(model => model.DiaChiKH, new { htmlAttributes = new { @class = "form-style" } })
                                        @Html.ValidationMessageFor(model => model.DiaChiKH, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mt-2">
                                        <p>Số Điện Thoại: </p>
                                        @Html.EditorFor(model => model.SDTKH, new { htmlAttributes = new { @class = "form-style" } })
                                        @Html.ValidationMessageFor(model => model.SDTKH, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group" style="margin-top:30px">
                                        <div class="col-md-offset-2 col-md-12">
                                            <input type="submit" value="Cập nhật" class="btn btn-primary"></input>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


